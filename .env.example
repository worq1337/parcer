# Backend
NODE_ENV=development
PORT=3001

# Database
# Для backend внутри Docker: DB_HOST=postgres / DB_PORT=5432
# Для backend на хосте:    DB_HOST=localhost / DB_PORT=5433
DB_HOST=postgres
DB_PORT=5432
DB_NAME=receipt_parser
DB_USER=postgres
DB_PASSWORD=postgres

# Integrations
TELEGRAM_BOT_TOKEN=replace_with_token
TELEGRAM_ALLOWED_USERS=123456789
OPENAI_API_KEY=replace_with_openai_key
OPENAI_MODEL=gpt-4o-mini
OCR_FALLBACK_ENABLED=true
