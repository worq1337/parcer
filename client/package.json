{
  "name": "receipt-parser-client",
  "version": "2.0.1",
  "description": "Desktop приложение для парсера банковских чеков",
  "homepage": ".",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/asintiko/receipt-parser.git"
  },
  "main": "electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "package": "npm run build && electron-builder --win",
    "dist": "npm run build && electron-builder --win"
  },
  "keywords": [
    "receipt",
    "parser",
    "electron",
    "react"
  ],
  "license": "ISC",
  "dependencies": {
    "@iconify/react": "^6.0.2",
    "ag-grid-community": "^31.0.1",
    "ag-grid-react": "^31.0.1",
    "axios": "^1.6.5",
    "date-fns": "^3.0.6",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "hyperformula": "^3.1.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.552.0",
    "luxon": "^3.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-scripts": "5.0.1",
    "react-toastify": "^10.0.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^25.9.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.receiptparser.app",
    "productName": "Receipt Parser",
    "extends": null,
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "worq1337",
      "repo": "parcer"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Receipt Parser",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Receipt Parser",
      "uninstallDisplayName": "Receipt Parser",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    }
  }
}
