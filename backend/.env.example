# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=receipt_parser
DB_USER=postgres
DB_PASSWORD=postgres

# Server Configuration
PORT=3001
NODE_ENV=development

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ALLOWED_USERS=user_id1,user_id2

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security Configuration (patch-017 §8)
# Секретный ключ для шифрования (используйте команду: openssl rand -hex 32)
ENCRYPTION_SECRET=your_random_64_character_hex_string_here

# Максимальный размер загружаемых файлов (МБ)
MAX_FILE_SIZE_MB=10
